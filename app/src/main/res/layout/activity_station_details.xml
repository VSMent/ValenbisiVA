<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/textView_Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Details:"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Number"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Address"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView_Total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginStart="15dp"
            android:text="Total"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView_Available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_marginStart="15dp"
            android:text="Available"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView_Free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_marginStart="15dp"
            android:text="Free"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView_Coordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginStart="15dp"
            android:text="Coordinates"
            app:layout_column="0"
            app:layout_gravity="center_vertical"
            app:layout_row="6" />

        <TextView
            android:id="@+id/textView_Reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_marginStart="15dp"
            android:text="Reports"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="7" />

        <TextView
            android:id="@+id/textView_NumberValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/textView_Number"
            android:text="Error"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_columnSpan="3"
            app:layout_gravity="fill_horizontal"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView_AddressValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:text="Error"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_columnSpan="3"
            app:layout_gravity="fill_horizontal"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView_TotalValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:text="Error"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_columnSpan="3"
            app:layout_gravity="fill_horizontal"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView_AvailableValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:text="Error"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_columnSpan="3"
            app:layout_gravity="fill_horizontal"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView_FreeValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:text="Error"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_columnSpan="3"
            app:layout_gravity="fill_horizontal"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView_CoordinatesValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:text="Error"
            android:textColor="@android:color/black"
            app:layout_column="1"
            app:layout_columnSpan="3"
            app:layout_gravity="fill_horizontal"
            app:layout_row="6" />

        <ListView
            android:id="@+id/ListView_Reports"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            app:layout_column="0"
            app:layout_columnSpan="4"
            app:layout_gravity="fill_vertical"
            app:layout_row="8" />

        <Button
            android:id="@+id/button_showOnMap"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="false"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:drawableTop="@android:drawable/ic_menu_mylocation"
            android:onClick="showOnMap"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="9" />

        <Button
            android:id="@+id/button_addReport"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="false"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:drawableTop="@android:drawable/ic_menu_edit"
            android:onClick="addReport"
            app:layout_column="2"
            app:layout_columnSpan="2"
            app:layout_row="9" />

</android.support.v7.widget.GridLayout>
